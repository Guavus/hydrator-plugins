{
  "metadata": {
    "spec-version": "1.1",
    "label": "Group by Aggregator"
  },
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "csv",
          "label": "Group by fields",
          "name": "groupByFields",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "required-fields": ["groupByFields", "categoricalDictionary", "aggregates"],
            "missing-required-fields-message": "'Group By Fields', 'categoricalDictionary' & 'Aggregates' properties are required to fetch schema."
          }
        },
        {
          "widget-type": "textbox",
          "label": "Custom Delimiter",
          "name": "delimiter"
        },
        {
          "widget-type": "csv",
          "label": "Categorical Field Dictionary",
          "name": "categoricalDictionary",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name Two"
          }
        },
        {
          "widget-type": "function-dropdown-with-alias",
          "label": "Aggregates",
          "name": "aggregates",
          "widget-attributes": {
            "placeholders": {
              "field": "field",
              "alias": "alias"
            },
            "dropdownOptions": [
              "ValueCount",
              "IndicatorCount"
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Number of Partitions",
          "name": "numPartitions"
        }
      ]
    }
  ],
  "outputs": []
}
