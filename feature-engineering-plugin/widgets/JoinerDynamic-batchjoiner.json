{
  "metadata": {
    "spec-version": "1.3"
  },
  "inputs": {
    "multipleInputs": true
  },
  "configuration-groups": [
    {
      "label": "Join",
      "properties": [
        {
          "widget-type": "csv",
          "label": "Fields",
          "name": "selectedFields",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Selected Fields"
          }
        },
        {
          "widget-type": "csv",
          "label": "Join Type",
          "name": "requiredInputs",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Join Type"
          }
        },
        {
          "widget-type": "csv",
          "label": "Categorical Field Dictionary",
          "name": "categoricalColumnsToBeChecked",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Categorical Columns"
          }
        },
        {
          "widget-type": "csv",
          "label": "Keys to be Appended",
          "name": "keysToBeAppended",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Keys to be Appended"
          }
        },
        {
          "widget-type": "csv",
          "label": "Join Condition",
          "name": "joinKeys",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Join Condition"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Number of Partitions",
          "name": "numPartitions",
          "plugin-function": {
            "method": "POST",
            "label": "Generate Schema",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "position": "bottom",
            "multiple-inputs": true,
            "button-class": "btn-hydrator"
          }
        }
      ]
    }
  ],
  "outputs": []
}
