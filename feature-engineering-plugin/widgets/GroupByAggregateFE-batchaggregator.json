{
  "metadata": {
    "spec-version": "1.5",
    "label": "Group by Aggregator"
  },
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "csv",
          "label": "Group by fields",
          "name": "groupByFields",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          },
          "plugin-function": {
            "method": "POST",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "required-fields": ["groupByFields", "aggregates"],
            "missing-required-fields-message": "'Group By Fields' & 'Aggregates' properties are required to fetch schema."
          }
        },
        {
          "widget-type": "hidden",
          "name": "categoricalDictionary",
          "widget-attributes": {
            "default": "default"
          }
        },
        {
          "widget-type": "function-dropdown-with-alias",
          "label": "Aggregates",
          "name": "aggregates",
          "widget-attributes": {
            "placeholders": {
              "field": "field",
              "alias": "alias"
            },
            "dropdownOptions": [
              "Avg",
              "Count",
              "First",
              "Last",
              "Max",
              "Min",
              "Stddev",
              "Sum",
              "Variance",
              "NUniq"
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Number of Partitions",
          "name": "numPartitions"
        }
      ]
    }
  ],
  "outputs": []
}
